<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workers.Views.WorkersPage">

    <StackLayout>
        <Label>List of workers:</Label>

        <ListView ItemsSource="{Binding Workers}"
              SelectedItem="{Binding SelectedWorker, Mode=TwoWay}"
              CachingStrategy="RecycleElement">

            <!--Тут можно использовать и ViewCell, но хорошо бы использовать Multibinding
            Для формирования строки-->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Sex}"/>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </StackLayout>

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="New" Order="Primary" Priority="0" Command="{Binding CreateWorkerCommand}" />
        <ToolbarItem Name="Edit" Order="Primary" Priority="1" Command="{Binding EditWorkerCommand}" />
        <ToolbarItem Name="Remove" Order="Primary" Priority="2" Command="{Binding DeleteWorkerCommand}" />
    </ContentPage.ToolbarItems>
</ContentPage>